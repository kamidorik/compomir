<div id="content">
    <a href="/admin/new_product" class="btn btn-outline-dark">Добавить товар</a>
    <a href="/admin/upload_picture" class="btn btn-outline-dark">Добавить изображение</a>
    <p></p>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Название</th>
          <th scope="col">Количество</th>
          <th scope="col">Действия</th>
        </tr>
      </thead>
      <tbody>
        {{#each elements}}
        <tr>
          <th scope="row">{{this._id}}</th>
          <td>{{this.name}}</td>
          <td>{{this.quantity}}</td>
          <td><form action="/delete_product/{{this._id}}" method="post"><input type="submit" value="Удалить" class="btn btn-outline-danger"></form><a href="/update_product/{{this._id}}" class="btn btn-outline-dark">Изменить</a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
</div>