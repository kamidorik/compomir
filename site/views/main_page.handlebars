<div id="content">
    <div class="container">
    <div>
        <h1 style="color: rgb(189, 165, 165); text-align: right;">Более сотни товаров!</h1>
        <h2 style="color: rgb(189, 165, 165); text-align: right;">Скидки каждый день!</h2>
    </div>
    <h2 class="bi bi-gem" style="text-align: center;"> Актуальные товары</h2>
    {{#each actual_list}}
    <div class="row">
        {{#each this}}
        <div class="col prod-cell">
            <img width="115" height = "115" src="/images/{{this.picture}}" />
            <h2>{{this.name}}</h2>
            <p>{{this.price}} р</p>
            <a href="/product/{{this._id}}" class="btn btn-outline-dark">Купить</a>
        </div>
        {{/each}}
    </div>
    {{/each}}
    <a href="/catalog" class="nav-link bi bi-book" style="color: rgb(189, 165, 165); text-align: right; font-size: 24px;"> Открыть каталог</a>
    </div>
</div>