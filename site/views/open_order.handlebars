<div id="content">
        <h3>Код получения: {{order.confirm_code}}</h3>
        <h3>Статус: {{order.status}}</h3>
        <div class="line"></div>
        {{#each order_items}}
    	    <div><h4>{{this.name}}<h4>
            <h4 style="text-align: right;">{{this.price}} р.</h4>
            </div>
        
        {{/each}}
        <div class="line"></div>
        <h3>Всего:</h3>
        <h3 style="text-align: right;">{{full_price}} р.</h3>
        <form action="/update_status/{{order._id}}" method="post">
        <select class="form-select" name="status" id="status" aria-label="Категория">
        <option disabled>Выберите статус</option>
            <option value="0">Готов к передаче</option>
            <option value="1">Доставлен</option>
            <option value="2">Отменен</option>
        </select>

        <input class="btn btn-outline-dark"  type="submit" value="Обновить">
        </form>
</div>